<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rv_shape"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:padding="20dp"
            android:elevation="10dp">

            <TextView
                android:id="@+id/text_promotionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Promotion Name"
                android:textColor="#BC2C3D"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_promotionLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Promotion Link"
                android:textColor="#A09696"
                android:textSize="11sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>